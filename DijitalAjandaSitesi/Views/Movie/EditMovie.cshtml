@model EntityLayer.Concrete.Movie
@{
    ViewBag.Title = "EditMovie";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Film Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditMovie", "Movie", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.WriterID)
    <div class="form-group">
        @Html.Label("Film Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
        <br />
        @Html.Label("Yönetmen Adı")
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Author)
        <br />
        @Html.Label("İçerik")
        @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Content)
        <br />
        @Html.Label("İzledim / İzlemedim")
        @Html.CheckBoxFor(x => x.IsRead, new { @class = "form-control" })

        <button class="btn btn-info">Kaydet</button>
    </div>
}

