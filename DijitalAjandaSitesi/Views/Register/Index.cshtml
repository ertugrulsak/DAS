@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}



<!doctype html>
<html lang="en">
<head>
    <title>Kayıt Ol</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Kayıt Ol</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                        {
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @placeholder = "Kullanıcı Ad" })
                                <br />
                                @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control", @placeholder = "Kullanıcı Soyad" })
                                <br />
                                @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @placeholder = "E-mail", 
                               type = "email", @data_val = "true", @data_val_email = "Geçerli bir e-posta adresi giriniz." })

                                <br />
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "Şifre", @type = "password" })

                                <br />

                                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>
</body>
</html>

